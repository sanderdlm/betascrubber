{% extends 'base.twig' %}

{% block content %}
    <div class="pricing-container">
        <h1>Pricing</h1>

        <div class="pricing-tier">
            <div class="pricing-header">
                <h2>Free</h2>
            </div>
            <div class="pricing-body">
                <div class="pricing-amount">$0</div>
                <ul class="pricing-features">
                    <li>✓ 5 videos</li>
                    <li>✓ Frame extraction</li>
                    <li>✓ Frame scrubber</li>
                </ul>
            </div>
        </div>

        <div class="pricing-tier tier-pro">
            <div class="pricing-header">
                <h2>Pro</h2>
            </div>
            <div class="pricing-body">
                <div class="pricing-amount">$4<span class="period">/month</span></div>
                <div class="pricing-subtitle">Cancel anytime</div>
                <ul class="pricing-features">
                    <li>✓ Unlimited videos</li>
                    <li>✓ Frame extraction</li>
                    <li>✓ Frame scrubber</li>
                    <li>✓ Priority processing</li>
                </ul>
                <div class="pricing-action">
                    <button onclick="alert('Payment integration coming soon')">
                        Subscribe
                    </button>
                </div>
            </div>
        </div>

        <div class="pricing-note">
            Payment processing will be added soon. For now, all features are free.
        </div>
    </div>
{% endblock %}
